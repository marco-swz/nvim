{
    "@var": {
        "prefix": ["@v"],
        "body": ["/** @var $0 */"],
        "description": "PHPDoc @var"
    },
    "@function": {
        "prefix": ["@f"],
        "body": [
            "/**",
            " * $0",
            " * @param ${2:type} ${3:name}",
            " * @return ${1:void}",
            " */"
        ],
        "description": "PHPDoc function"
    },
    "sql-block": {
        "prefix": ["<s"],
        "body": [
            "<<<SQL",
            "\t$0",
            "SQL"
        ],
        "description": "Multiline SQL block"
    },
    "html-block": {
        "prefix": ["<h"],
        "body": [
            "<<<HTML",
            "\t$0",
            "HTML"
        ],
        "description": "Multiline HTML block"
    }
}
